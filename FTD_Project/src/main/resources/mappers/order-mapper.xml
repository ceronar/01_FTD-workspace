<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="orderMapper">

	<resultMap id="orderResultSet" type="order">
		<result column="ORDER_NO" property="orderNo" />
		<result column="MEMBER_NO" property="memberNo" />
		<result column="ORDER_NAME" property="orderName" />
		<result column="PHONE" property="phone" />
		<result column="PRICE" property="price" />
		<result column="ZIP_CODE" property="zipCode" />
		<result column="ADDRESS" property="address" />
		<result column="DETAIL_ADDRESS" property="detailAddress" />
		<result column="REQUEST" property="request" />
		<result column="PAY_TID" property="payTid" />
		<result column="PAY_METHOD" property="payMethod" />
		<result column="PAY_DATE" property="payDate" />
		<result column="PAY_CANCEL" property="payCancel" />
		<result column="STATUS" property="status" />
	</resultMap>
	
	<resultMap id="cartResultSet" type="cart">
		<result column="CART_NO" property="cartNo" />
		<result column="MEMBER_NO" property="memberNo" />
		<result column="GOOD_NO" property="goodNo" />
		<result column="COUNT" property="count" />
		<result column="STATUS" property="status" />
		<result column="CHANGE_NAME" property="changeName" />
		<result column="GOOD_TITLE" property="goodTitle" />
		<result column="PRICE" property="price" />
	</resultMap>
	
	<insert id="paySuccess" parameterType="order">
		INSERT INTO "ORDER"(ORDER_NO, MEMBER_NO, ORDER_NAME, PHONE, PRICE, ZIP_CODE, ADDRESS, DETAIL_ADDRESS, REQUEST, PAY_TID, PAY_METHOD, PAY_DATE, STATUS)
				     VALUES(SEQ_ONO.NEXTVAL, #{memberNo}, #{orderName}, #{phone}, #{price}, #{zipCode}, #{address}, #{detailAddress}, #{request}, #{payTid}, #{payMethod}, SYSDATE, 'Y')
	</insert>
	
	<select id="memberBasketList" parameterType="_int" resultMap="cartResultSet">
		SELECT CART_NO, C.GOOD_NO, CHANGE_NAME, GOOD_TITLE, "COUNT", PRICE
		  FROM CART C
		  JOIN GOODS G ON C.GOOD_NO = G.GOOD_NO
		  LEFT JOIN GOODS_FILE F ON (G.GOOD_NO = F.SELL_NO)
		 WHERE MEMBER_NO = #{memberNo}
		   AND STATUS = 'N'
		   AND G.STOCK > 0
	</select>
	
</mapper>